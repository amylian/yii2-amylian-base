{
  "name": "amylian/yii2-amylian-base",
  "description": "ATTENTION: EXPERIMENTAL! Core package for all Amylian packages",
  "type": "yii2-extension",
  "license": "BSD-3-Clause",
  "authors": [{
      "name": "Andreas Prucha (Abexto - Helicon Software Development - Andreas Prucha / Amylian Project)",
      "email": "andreas.prucha@gmail.com",
      "homepage": "http://www.abexto.com",
      "role": "Developer"
    }    
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "require": {
    "yiisoft/yii2": "2.*"
  },
  "require-dev": {
    "amylian/yii2-amylian-phpunit": "*"
  },
  "suggest": {
    "php": ">=7.0"
  },
  "autoload": {
    "psr-4": {
      "abexto\\amylian\\yii\\base\\": "src/"
    }    
  },
  "autoload-dev": {
    "psr-4": {
      "abexto\\amylian\\yii\\base\\tests\\": "tests/"
    }    
  }
}
